<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="New cookies"
        android:textColor="@color/goodMessage"
        android:id="@+id/textView"
        android:layout_weight="0.04"
        android:textAlignment="center"
        android:singleLine="false"
        android:gravity="center"
        android:textSize="25dp"
        android:background="@drawable/border"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/imageView2"
        android:backgroundTint="@color/background"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/closed_cookie"
        android:background="@color/background"
        android:paddingTop="2dp"
        android:paddingBottom="2dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Result"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="25dp"
        android:background="@color/background_date"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Result : No Result"
        android:textColor="@color/goodMessage"
        android:id="@+id/result"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04"
        android:gravity="center|start"
        android:textSize="18dp"
        android:paddingLeft="20dp"
        android:background="@drawable/border"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Date :"
        android:id="@+id/date"
        android:layout_weight="0.04"
        android:layout_gravity="right"
        android:textSize="18dp"
        android:paddingRight="20dp"
        android:gravity="center_vertical|right"
        android:background="@color/background_date"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.38">

        <!--<ImageButton-->
            <!--android:layout_width="140dp"-->
            <!--android:layout_height="140dp"-->
            <!--android:id="@+id/imageButton"-->
            <!--android:layout_gravity="center"-->
            <!--android:background="@drawable/oval"></ImageButton>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shake"
            android:id="@+id/sensor"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="@color/abc_primary_text_material_dark"
            android:elevation="7dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

        <android.support.design.widget.FloatingActionButton
            app:fabSize="normal"
            android:layout_width="108dp"
            android:layout_height="115dp"
            android:layout_gravity="center"
            android:id="@+id/fab"
            app:backgroundTint="@android:color/holo_blue_dark" />

    </FrameLayout>
</LinearLayout>